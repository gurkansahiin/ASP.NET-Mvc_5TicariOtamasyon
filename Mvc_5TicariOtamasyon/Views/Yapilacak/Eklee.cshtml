
@model Mvc_5TicariOtamasyon.Models.sınıflar.yapilacak
@{
    ViewBag.Title = "Eklee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Bir Yapılacak Ekle</h2>


<form class="form-group" method="post">
    @Html.LabelFor(x => x.baslik)
    @Html.TextBoxFor(x => x.baslik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.durum)
    @Html.TextBoxFor(x => x.durum, new { @class = "form-control" })
    <br />



    <button class="btn btn-primary mt-3">Yapilacak Ekle</button>
</form>

