@model IEnumerable<Mvc_5TicariOtamasyon.Models.sınıflar.grupsinif4>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kategori-Ürün İlişkisi</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Kategori Ad</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Oran</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0;} @*//değişkeni böyle tanımlamış olduk*@
                @foreach (var x in Model)
                {


                    <tr>
                        <td>@{sirano++;} @sirano</td> @*sıranoyu arttırdık ve yazdırdık*@
                        <td>@x.kategori</td>
                        <td>
                            @if (x.sayi == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-info" style="width: 55%"></div>
                                </div>
                            }
                            @if (x.sayi == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 70%"></div>
                                </div>
                            }
                            @if (x.sayi == 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-warning" style="width: 85%"></div>
                                </div>
                            }
                        </td>
                        @if (x.sayi == 1)
                        {
                            <td><span class="badge bg-danger">@x.sayi</span></td>


                        }
                        @if (x.sayi == 2)
                        {
                            <td><span class="badge bg-primary">@x.sayi</span></td>


                        }
                        @if (x.sayi == 3)
                        {
                            <td><span class="badge bg-warning">@x.sayi</span></td>


                        }
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->

</div>
